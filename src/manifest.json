{
  "name": "fileknock",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Discover will-known web contents like robots.txt, security.txt, ...",
  "author": "Hiroshi Ioka",
  "developer": {
    "name": "Hiroshi Ioka",
    "url": "https://github.com/hirochachacha/fileknock"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ee9745fb-fcb6-42f0-a780-2b4e2e3afedc}"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "unlimitedStorage",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.ts"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  }
}
